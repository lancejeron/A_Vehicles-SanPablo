extends ../../../templates/master.pug

//- This is how we insert dynamic content to extended templates
block content
    form(method="POST" action="update/update")
        .field
            .label ID to Update
            .control
                input.input(type="number" placeholder="ID" name="id")
        .field
            .label MAKE
            .control
                input.input(type="text" placeholder="make" name="make")
        .field
            .label MODEL
            .control
                input.input(type="text" placeholder="model" name="model")
        .field
            .label YEAR
            .control
                input.input(type="text" placeholder="year" name="year")
        .field
            .label PLATE NUMBER
            .control
                input.input(type="text" placeholder="plate_number" name="plate_number")
        .field
            .label VCONDITION
            .control
                input.input(type="text" placeholder="vcondition" name="vcondition")
        input(type="submit" value="Submit")